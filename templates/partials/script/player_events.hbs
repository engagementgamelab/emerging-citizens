var playerName;
var playerHashtag;

var socketEvents = function(eventId, eventData) {

    switch (eventId) {

        case 'connect':

            // Connected, let's sign-up for to receive messages for this room
            socket.emit('room', emitData('player'));

            break;

        case 'player:id':

            $('#debug-info').text('Player id: ' + eventData);
            console.log (eventData + " is the player ID event data");
            playerId = eventData;

            break;

        case 'game:start':

            $('#gameContent').html(eventData);

            // Change background
            $('.body').addClass('player');

            break;

        case 'game:ending':

            $('#error-box').text(eventData);
            $('#error-box').show();

            break;

        case 'game:ended':

            $('#gameContent').html(eventData);

            break;

        case 'game:resumed':

            $('#error-box').hide();

            break;

        case 'game:notfound':

            $('#error-box').text('game not found!');
            $('#error-box').show();

            break;

        case 'game:countdown_ending':

            $('.form .error').fadeIn().html(eventData);

            break;

        case 'hashtags:submit':

            // $('#countdownTimer').empty();

        case 'hashtags:received':  

            // TODO: Server-side?    
            $('#gameContent').html(eventData);
            

            // Remove current player's submission from selections
            console.log (playerHashtag + " is the hashtag");
            $('#vote-submission').find('button[data-package="' + playerHashtag + '"]').remove();

            break;

        case 'hashtag:tryagain':

            $('#tweet_input').val('').addClass('invalid');
            $('#tweet-submission .error').text(eventData).fadeIn();

            break;

        // Hashtag successfully submitted
        case 'hashtag:success':

            $('#countdownTimer').empty();
            $('#tweet-submission').hide();
            $('#submitted').show();

            playerHashtag = eventData;
            console.log (playerHashtag + " is the playerHashtag @ hashtag:success");

            break;

        case 'game:end':
        case 'game:round_over':
        case 'game:countdown_end':
        case 'players:update':

            $('#gameContent').html(eventData);

            var nextRoundAnim = new TimelineLite({ paused:true , onComplete:function() {}});
            nextRoundAnim.from($('#nextRound'), 2.5, { scale: 0, opacity:0, ease:Elastic.easeOut }, { scale: 1, opacity: 1, display: 'block'});
            nextRoundAnim.play();
            break;

        default:

            console.error('No handler found for event "' + eventId + '"');

            break;

    }

};