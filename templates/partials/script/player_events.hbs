var playerName;

var socketEvents = function(eventId, eventData) {

    switch (eventId) {

        case 'connect':

            // Connected, let's sign-up for to receive messages for this room
            socket.emit('room', emitData('player'));

            break;

        case 'player:id':

            $('#debug-info').text('Player id: ' + eventData);
            playerId = eventData;

            break;

        case 'game:start':

            $('#gameContent').html(eventData);

            // Change background
            $('.body').addClass('player');

            break;

        case 'game:ending':

            $('#error-box').text(eventData);
            $('#error-box').show();

            break;

        case 'game:resumed':

            $('#error-box').hide();

            break;

        case 'game:notfound':

            $('#error-box').text('game not found!');
            $('#error-box').show();

            break;

        case 'game:countdown_ending':

            $('#countdownTimer').html(eventData);

            break;

        case 'hashtags:received':  

            // TODO: Server-side?    
            $('#gameContent').html(eventData);

            // Remove current player's submission from selections
            $('#vote-submission').find('button[data-package="' + playerId + '"]').remove();

            break;

        case 'game:end':
        case 'game:round_over':
        case 'game:countdown_end':
        case 'players:update':

            $('#gameContent').html(eventData);
            
            break;

    }

};