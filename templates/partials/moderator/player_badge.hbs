{{!-- Player Badge --}}
<section class="player-badge">
	{{!-- <div class="badge"> --}}
	  
	  <figure class="badge-face front">
		
		  <div class="player-background {{#if creator}}creator{{/if}}{{#if points}}voter{{/if}}">
			    <div class="player-static">
			        <div class="icon active">
			            <img src="/images/layout/hyi/icons/avatar{{user.index}}.png" class="portrait" />
							
									{{#if points}}
						        <div class="points">
						        	+{{points}}
						        </div>
						      {{/if}}
			        </div>

			        <div class="nameplate active">

			            {{user.username}}

			        </div>

			        {{#if score}}
				        <div class="score hidden-el">
				        	+{{score}}
				        </div>
				      {{/if}}
			    </div>
			</div>
		
		</figure>

