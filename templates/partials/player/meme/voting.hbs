<section class="form row">
    
    {{!-- <div class="col-lg-5"></div> --}}
    
    <div id="meme-voting" class="row col-lg-3 col-centered">

        <div id="meme-slider" class="glide" style="min-width: 400px;">

            <div class="glide__arrows">
                <button class="glide__arrow prev desktop-only" data-glide-dir="<"><<</button>
                <button class="glide__arrow next desktop-only" data-glide-dir=">">>></button>
            </div>

            <div class="glide__wrapper">
                <ul class="glide__track">

                    {{#each submissions}}
                        <li class="glide__slide">
                            <div class="meme">


                                <div class="text-upper">{{upper}}</div>
                                <div class="text-lower">{{lower}}</div>
                                <input class="btn-like" type="submit" name="submit" value="like">
                                
                                <img src="{{{cloudinaryUrl image width=400 height=400 quality=80}}}" alt="Meme Image {{@index}}" />

                            </div>
                        </li>
                    {{/each}}
                
                </ul>
            </div>

            <div class="glide__bullets"></div>
            
                <div class="row">

                    <input id="btn-vote" class="post-button" type="submit" name="submit" value="vote">

                </div>
            </div>                    

        </div>

    </div>

    {{!-- <div class="col-lg-5"></div> --}}

</section>