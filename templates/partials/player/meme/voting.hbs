<section class="form row">
        
    <div id="meme-voting" class="row col-lg-3 col-centered">

        <div id="meme-slider" class="glide">

            <div class="glide__arrows">
                <button class="glide__arrow prev desktop-only" data-glide-dir="<"><<</button>
                <button class="glide__arrow next desktop-only" data-glide-dir=">">>></button>
            </div>

            <div class="glide__wrapper">
                <ul class="glide__track">

                    {{#each submissions}}
                        <li class="glide__slide">
                            <div class="meme" style="background-image: url({{cloudinaryUrl image width=400 height=400 quality=80}})">

                                <div class="meme-text text-upper">{{upper}}</div>
                                <div id="text-lower-wrapper">
                                    <div class="meme-text text-lower">{{lower}}</div>
                                </div>

                                <input class="btn-like" type="image" name="submit" value="like" src="https://res.cloudinary.com/engagement-lab-home/image/upload/c_scale,f_auto,w_65/v1/emerging-citizens/images/layout/wwdmm/like-button.png">

                            </div>
                        </li>
                    {{/each}}
                
                </ul>
            </div>

            <div class="glide__bullets"></div>
        
            <div class="row">

                <input id="btn-vote" class="post-button" type="submit" name="submit" value="vote">

            </div>                  

        </div>

    </div>

</section>