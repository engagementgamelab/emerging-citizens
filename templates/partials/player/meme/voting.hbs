<div class="page-container">
    <div class="row">

        <section class="form col-sm-6">
            
            <div id="meme-voting" style="height: 400px;" class="row">
                <div class="col-lg-12" style="height: 100%">

                    <div id="meme-slider">
                        <ul>
                        {{#each submissions}}
                            <li>
                                <img src="{{{cloudinaryUrl image width=400 quality=80}}}" />
                                <input class="btn-like" type="submit" name="submit" value="like">
                            </li>
                        {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="row">

                <input id="btn-vote" class="post-button" type="submit" name="submit" value="vote">

                <div id="voted" style="display:none;padding:30px;font-size:2em;background:green;color:white">voted!</div>

            </div>

        </section>

    </div>
</div>