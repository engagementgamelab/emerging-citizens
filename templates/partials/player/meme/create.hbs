<section class="form row">
    
    <div id="meme-create" class="row col-lg-3 col-centered" style="margin-top: -5%;">

        <div id="meme-slider" class="glide">

            {{!-- <input id="text-upper" class="meme-text" placeholder="select to edit" maxlength="140" tabindex="1"  /> <br />
            <input id="text-lower" class="meme-text" placeholder="select to edit" maxlength="140" tabindex="2" /> <br /> --}}

            <span id="text-upper-hidden" class="meme-text-hidden"></span>
            <span id="text-lower-hidden" class="meme-text-hidden"></span>

            <input type="text" id="image-index" value="0" style="display:none">
            
            <div class="glide__arrows">
                <button class="glide__arrow prev desktop-only" data-glide-dir="<"><<</button>
                <button class="glide__arrow next desktop-only" data-glide-dir=">">>></button>
            </div>

            <div class="glide__wrapper">
                <ul class="glide__track">

                    {{#each memeImages}}
                        <li class="glide__slide">
                            <img src="{{{cloudinaryUrl this width=400 height=400 quality=80}}}" alt="Meme Image {{@index}}" />
                        </li>
                    {{/each}}
                
                </ul>
            </div>

            <div class="glide__bullets"></div>

        </div>

        <div id="meme-text" class="row" style="display:none;">

            <input id="text-upper" class="meme-text" placeholder="select to edit" maxlength="140" tabindex="1"  /> <br />
            <input id="text-lower" class="meme-text" placeholder="select to edit" maxlength="140" tabindex="2" />
            <canvas id="meme-canvas" width="0" height="0"></canvas>
        </div>
   
        <div id="btn_next" class="row">

            <input {{!-- data-event="meme:submit" data-package='{"text_upper": "#text-upper", "text_lower": "#text-lower", "image_index": "#image-index"}' --}} data-autohide="false" class="{{!-- post-button  --}}submit" type="submit" name="submit" value="next">

        </div>
   
        <div id="btn_submit" class="row" style="display:none;">

            <input type="submit" name="submit" value="back">
            <input data-event="meme:submit" data-package='{"text_upper": "#text-upper", "text_lower": "#text-lower", "image_index": "#image-index"}' data-autohide="false" class="post-button submit" type="submit" name="submit" value="submit">

        </div>

    </div>

</section>

<section id="meme-created" class="form col-sm-6" style="display:none;">
    <h1>meme submitted!</h1>waiting for other players...
</section>