<div class="page-container">
    <div class="row">
        
        <div class="col-lg-4 col-sm-4"> 
        {{> group/meme/players_grid players=players.left offset=0 left=true }}
        </div>

        {{!-- Room Code Container --}}
        <section class="col-lg-4 col-sm-4">
            <div id="game_code" class="row room-container">
                <div class="col-lg-12 col-sm-12">

                    {{!-- STATE TEXT --}}
                    <h2 class="wait-players">Waiting for players to join...</h2>
                    {{{cloudinaryImg "emerging-citizens/images/layout/wwdmm/squiggle.png" width=350}}}
                    
                    {{!-- ROOM CODE --}}
                    <h1>Room Code</h1>
                    <h1 class="game-header bold">
                        <span id="first">{{accessCodeSplit.[0]}}</span>
                        <span id="second">{{accessCodeSplit.[1]}}</span>
                        <span id="third">{{accessCodeSplit.[2]}}</span>
                        <span id="fourth">{{accessCodeSplit.[3]}}</span>
                    </h1>
                    
                    {{!-- BLURB --}}
                    <div class="row">
                        <div class="col-lg-12 col-sm-12" style="margin: 3% auto;">
                            <h3 class="game-header">
                            visit <em>
                            {{#ifeq environment "production"}}
                            ecplay.org
                            {{else}}
                            qa.ecplay.org
                            {{/ifeq}}
                            </em>on your smartphone or tablet to join the game.</h3>
                        </div>
                    </div>

                    <div class="form" id="startGameForm">

                        <input id="btn-start-game" data-event="game:start" class="post-button submit" type="submit" name="submit" value="start" style="visibility:hidden; background-color: #60D1E8;">
                    
                    </div>

                </div>
            </div>
        </section>

        <div class="col-lg-4 col-sm-4"> 
        {{> group/meme/players_grid players=players.right offset=4 left=false }}
        </div>
        
    </div>
</div>