<div class="page-container">
    <div class="row">

        {{!-- Players left-hand column --}}
        {{> group/players_column players=players.left offset=0 left=true active=true }}
        
        {{!-- Room Code Container --}}
        <section class="col-sm-6 room-container" id="topic-container">
            
            <div style="margin-top:16%" class="row">
                <div class="col-lg-12">
                <h1 style="font-size: 3em;color: #ffa76d" class="game-header">
                    make a meme about <span style="font-weight:bold;">{{topicName}}</span>
                </h1>
                <img src="{{{cloudinaryUrl topicImage width=250 quality=80}}}" />
                </div>
            </div>
            <div class="row countdown">

                <div id="countdown"></div>

                <h2>remaining</h2>
            </div>

        </section>
        
        {{!-- Players right-hand column --}}
        {{> group/players_column players=players.right offset=4 left=false active=true }}

    </div> {{!-- end page row --}}
</div>