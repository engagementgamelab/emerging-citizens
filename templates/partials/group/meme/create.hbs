<div class="page-container">
    <div class="row">

        {{!-- Players left-hand column --}}
        <div class="col-lg-4 col-sm-4"> 
        {{> group/meme/players_grid players=players.left offset=0 left=true active=true }}
        </div>

        {{!-- Room Code Container --}}
        <section class="col-sm-4 room-container" id="topic-container">
            
            <div style="margin-top:16%" class="row">
                <div class="col-lg-12">
                <h1 style="color: #14B1E5" class="game-header">
                    make a meme about 
                </h1>
                <img src="{{{cloudinaryUrl topicImage width=250 quality=80}}}" />
                <div class="meme-topic" style="font-weight:bold;">{{topicName}}</div>
                </div>
            </div>
            <div class="row countdown">

                <div id="countdown" style="color:#FFAB48;"></div>

                <h2 style="color: #14B1E5;">REMAINING</h2>
            </div>

        </section>
        
        {{!-- Players right-hand column --}}
        <div class="col-lg-4 col-sm-4"> 
        {{> group/meme/players_grid players=players.right offset=4 left=false active=true }}
        </div>

    </div> {{!-- end page row --}}
</div>