{{!-- {{> group/header_htyi }} --}}

<div class="page-container">

    <div class="col-sm-3"></div>
    <div id="hashtag-submissions-prompt" class="col-sm-6 hidden-el">
        {{> shared/tweet text=tweet}}

        <div class="row">
            <div class="row" style="margin-top:15%;font-size:2em">guess the <span id="real">real</span> hashtag!</div>

            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-6 voting" id="clock-bg">
                    <div id="clock-face">
                        <img id="clock-hand" class="clock-hand" src="/images/layout/hyi/clockhand.png">
                    </div>
                </div>
                <div class="col-sm-2"></div>
            </div>
        </div>
    </div>


    <div class="row">
        <section id="hashtag-submissions" class="col-sm-12">

            <div class="col-sm-3 leftmost">
                {{#each hashtags}}
                    <div class="hashtag"><span class="octothorp">#</span>{{hashtag}}</div>

                   {{#ifeq @index 2}}</div><div class="col-sm-3 left">{{/ifeq}}
                   {{#ifeq @index 5}}</div><div class="col-sm-3 right">{{/ifeq}}
                   {{#ifeq @index 7}}</div><div class="col-sm-3 rightmost">{{/ifeq}}
                {{/each}}
            </div>
            
            </div>
        </section>
    </div>
</div>