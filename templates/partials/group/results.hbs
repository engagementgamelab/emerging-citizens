{{!-- {{> group/header_htyi }} --}}

<div class="page-container">

    <div id="hashtags" class="results" style="visibility: hidden;">
        
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            {{> shared/tweet text=tweet}}
            
            <div id="hashtag-submissions-prompt" class="hidden-el">
                <div>the real hashtag was:</div>
            </div>
            
            <div id="hashtag-results">

                {{#each hashtags}}

                    {{!-- Show non-real hashtags only if they have votes --}}
                    {{#if this.votes}}

                        <div class="result {{#if real}}real{{else}}fake{{/if}}" style="visibility: hidden;">
                      
                            {{#unless real}}
                                {{> group/player_badge user=user avatar_ind=index creator=true }}
                            {{/unless}}
                            
                            <div class="hashtag"><span class="octothorp">#</span>{{hashtag}}</div>

                            {{#each this.votes}}

                                {{> group/player_badge user=user avatar_ind=index points=score }}
                            
                            {{/each}}

                        </div>

                    {{else}}

                        {{#if real}}

                            <div class="result real" style="visibility: hidden;">
                          
                                {{> group/player_badge user=user avatar_ind=index creator=true }}
                      
                                <div class="hashtag"><span class="octothorp">#</span>{{hashtag}}</div>

                                {{#if this.votes}}
                                    {{#each this.votes}}

                                        {{> group/player_badge user=user avatar_ind=index points=score }}
                                    
                                    {{/each}}
                                {{else}}
                                    No votes!
                                {{/if}}

                            </div>
                            
                        {{/if}}

                    {{/if}}
     
                {{/each}}

            </div>
        </div>
        <div class="col-sm-4"></div>

    </div>

    {{!-- Show FINAL scores only at last round --}}
    {{#if last_round}}

        <div id="final-scores" class="results" style="visibility: hidden;">

            <h1>Final Scores!</h1>

            {{#each players}}
        
                {{#iflt @index 3}}
                    <div class="row">
                    
                        <div class="col-sm-{{add (add @index 2) @index}}"></div>

                        <div class="col-sm-4">
                            <div class="score-box" style="visibility: hidden;">
                                {{> group/player_badge user=user avatar_ind=index creator=true }}

                                <score>
                                    {{#if score_total}}
                                        {{score_total}}
                                    {{else}}
                                        0
                                    {{/if}}
                                </score>
                            </div>
                        </div>
                    
                    </div>
                {{/iflt}}
        
            {{/each}}

        </div>

    {{/if}}

