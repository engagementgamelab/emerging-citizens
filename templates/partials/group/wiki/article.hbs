<div class="page-container">
    <div class="row">
        {{!-- Topic Info Container --}}
        <section class="col-sm-12 room-container" id="topic-container">

				<div class="row">
				    <div class="col-sm-12">
				        <h4>Find the article!</h4>
				        <h2 class="article-name">"{{articleName}}"</h2>
				        
				    </div>
				</div>

			    <div class="row article-info">

			    	<div class="col-sm-4 article-image"><img src="{{{cloudinaryUrl articleImage width=auto height=auto crop='scale' quality=100}}}"></div>
			        <div class="col-sm-8 article-description">
			            
			        {{{articleDescription}}}

			        </div>
			    </div>
			    <div class="row players-countdown">
			    	<div class="col-sm-8"> 
				    	{{>group/players_grid players=this.players}}
				    </div>

				    <div class="col-sm-4 countdown marching">
				      <section id="countdown">
				      	<span id="text">0:00</span>
				      </section>
				    </div>
			    </div>
		</section>
    
    </div> 
    
</div>
