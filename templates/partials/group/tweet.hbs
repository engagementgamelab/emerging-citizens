{{> group/header_htyi }}

<div class="page-container">
    <div class="row">
        {{> group/players_column players=players.left offset=0 left=true active=true }}
        
        {{!-- Room Code Container --}}
        <section class="col-lg-6 room-container" id="tweet-container">
        
            {{{tweetFormat tweetText.html}}}
            
            <div class="row">
                <div class="col-lg-12">
                <h1 style="font-size: 3em;" class="game-header orange-font">make up a <span style="font-weight:bold;">hashtag!</span>
                    </h1>
                <h1 style="font-size: 1em;" class="game-header green-font">(other players should think it's the real one)
                    </h1>

                </div>
            </div>

            <div class="col-sm-4"></div>
            <div class="col-sm-6" id="clock-bg">
                <div id="clock-face">
                    <img id="clock-hand" src="/images/layout/hyi/clockhand.png">
                </div>
            </div>
            <div class="col-sm-2"></div>

        </section>
        
        {{> group/players_column players=players.right offset=4 left=false active=true }}

    </div> {{!-- end page row --}}
</div>