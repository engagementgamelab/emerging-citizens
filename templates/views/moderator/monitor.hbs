{{> moderator/header_htyi }}

<div class="page-container">
    <div class="row">
        
        {{> moderator/players_column players=players.left offset=0 left=true }}

        {{!-- Room Code Container --}}
        <section class="col-lg-6">
            <div class="row room-container game_code">
                <div class="col-lg-12">
                    <h1 class="game-header">Room Code:
                    </h1>
                    <h1 class="game-header">
                        <span id="first">{{accessCodeSplit.[0]}}</span>
                        <span id="second">{{accessCodeSplit.[1]}}</span>
                        <span id="third">{{accessCodeSplit.[2]}}</span>
                        <span id="fourth">{{accessCodeSplit.[3]}}</span>
                    </h1>

                    <div class="row">
                        <div class="col-lg-12" style="margin-top: 5%;">
                            <h1 style="font-size: 1.5em;" class="game-header green-font">waiting for other players....</h1>
                            {{!-- <input id="btn_submit" data-event="game:start" class="button_text" type="submit" name="submit" value="Submit"> --}}
                        </div>
                    </div>

                </div>
            </div>
        </section>
        
        {{> moderator/players_column players=players.right offset=4 left=false }}
        
    </div>
</div>