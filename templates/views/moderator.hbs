<style>
.input-box { position: relative; }
input { display: block; border: 1px solid #d7d6d6; background: #fff; padding: 10px 10px 10px 20px; width: 195px; }
.hash { position: absolute; display: block; left: 5px; top: 10px; z-index: 9; color: #47527D; }
</style>

    <!-- Page Content -->
    <div class="container">

        <!-- Introduction Row -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Moderator
                </h1>
            </div>
        </div>


        <div class="row input-box">
                <input id="game_name" name="name" class="element text medium" type="text" maxlength="255" value="" style="background-image: url(&quot;http://www.phpform.org/images/shadow.gif&quot;); background-position: 50% 0%; background-repeat: repeat-x;" placeholder="Game Name">
                
                <select id="game_type" name="gameType">
                {{#each gameTypes}}
                  <option value="{{@index}}">{{this}}</option>
                {{/each}}
                </select><br />

                <input id="time_limit" name="timeLimit" class="element text medium" type="text" maxlength="1" value="2" style="background-image: url(&quot;http://www.phpform.org/images/shadow.gif&quot;); background-position: 50% 0%; background-repeat: repeat-x;" placeholder="Time Limit"> minutes

                <input id="player_count" name="playerCap" class="element text medium" type="number" maxlength="255" value="" style="background-image: url(&quot;http://www.phpform.org/images/shadow.gif&quot;); background-position: 50% 0%; background-repeat: repeat-x;" placeholder="Player Cap"><br />
                
                Access Code:<br />
                <input id="access_code" name="accessCode" class="element text medium" type="text" maxlength="255" value="{{gameCode}}" style="background-image: url(&quot;http://www.phpform.org/images/shadow.gif&quot;); background-position: 50% 0%; background-repeat: repeat-x;">
                <input id="btn_submit" class="button_text" type="submit" name="submit" value="Submit">
        </div>

