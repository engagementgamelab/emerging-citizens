<div class="lessonPlans">
{{!-- {{jsonPrint this.plan}} --}}

  <div class="row">
    <div class="col-md-4 col-sm-12 plans-buttons clearfix button-group filters-button-group" data-filter-group="">
        <button value="*" data-filter="" class="button">All</button>
        <button class="button" value="#" data-filter=".htyi">Hashtag, You're It!</button>
        <button class="button" value="#" data-filter=".wikigeeks">WikiGeeks</button>
        <button class="button" value="#" data-filter=".wwdmm">Wait, Wait, Don't Meme Me</button>
      </div>
  </div>


  <div class="row allPlans" id="lesson-plans">

    {{#each this.plans}}

    <div class="col-lg-4 col-md-4 col-sm-12 plans-item item {{#each game}} {{gameType}} {{/each}}">
      <div class="plan-card" data-category="{{#each game}} {{gameType}} {{/each}}">
        <h3>{{name}}</h3>
        <h5>Content: </h5>{{#each contentCategories}} <p>{{topicName}}</p> {{/each}}
        <h5>Associated Games: </h5>{{#each game}} <p>{{gameType}}</p> {{/each}}

        <button class="button more-button" data-id="{{plan_key}}" value="#">More</button>
      </div>
    </div>
     
    {{!-- {{jsonPrint this}} --}}

    {{/each}}

  </div>
  

</div>


<div class="plan-modals" style="display:none">

{{#each this.plans}}

    <div class="plan" style="display:none" id="{{plan_key}}">
      <div class="plan-inner">
        <h3>{{name}}</h3>
        <h5>Content: </h5>{{#each contentCategories}} <p>{{topicName}}</p> {{/each}}
        <h5>Associated Games: </h5>{{#each game}} <p>{{gameType}}</p> {{/each}}

        <button class="button back-button" value="#">Back</button>
      </div>
    </div>
     
    {{!-- {{jsonPrint this}} --}}

{{/each}}

</div>


<footer id="footer">

  <!-- .footer start -->
  <div class="footer col-md-12">
    <div class="container">
      <div class="footer-inner">
        <div class="row">
          <div class="footer-content text-center padding-ver-clear">

            <div class="logos-footer center-block">
              <a href="http://elab.emerson.edu/"><img id="logo" src="/images/layout/logo_el.png" alt="Engagement Lab" width="60" height="60"></a>
            </div>

            <p class="text-center">An applied research lab at Emerson College for reimagining civic engagement in a digital culture<br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- .footer end -->

</footer>