<div class="launch"><a class="button" href="/new/{{whichGame}}">Launch Game</a></div>

	<div class="blurb">
    {{{game.lessonGuide.html}}}
	</div>

  <div class="content">

    {{#each categories}}

      Category
      {{this.topicName}}

    {{/each}}

    {{#each lessonPlans}}
      {{#each relatedGame}}
      
        {{#ifeq gameType ../../whichGame}}

          <div class="col-lg-4 col-md-4 col-sm-12 plans-item item {{relatedGame.gameType}} {{category.cat_key}}">
            <div class="plan-card" data-category="">
              <h3>{{name}}</h3>
              <h4>Content: </h4> {{#each category}}<p>{{topicName}}</p> {{/each}}
              <h4>Associated Games: </h4> {{#each relatedGame}}<p>{{gameType}}</p>{{/each}}

              <button class="button open-plan" id="" data-id="{{plan_key}}" value="#">More</button>
            </div>
          </div>

          {{/ifeq}}

      {{/each}}
    {{/each}}

</div>