<!DOCTYPE html>
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
    <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <title>Emerging Citizens</title>
        <meta name="description" content="A suite of digital multiplayer games that teaches students how to critique and create civic media.">
        <meta name="author" content="Engagement Lab">
        

        {{#ifeq section 'play'}}
            {{!-- Mobile Meta --}}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="theme-color" content="#FFAB43">
        {{/ifeq}}

        {{!-- Open Graph --}}
        {{!-- <meta property="og:image" content="http://res.cloudinary.com/engagement-lab-home/image/upload/v1455896685/site/about/logo_color.png" /> --}}

        {{!-- Load our CSS/docs --}}
        {{> css environment=env section=section}}
        
        {{!-- This file provides the default styling for the KeystoneJS Content Editor
        - only renders when user is logged in and admin--}}
        {{!-- {{{isAdminEditorCSS user}}} --}}
    </head>
    
    <body class="body">

        {{#ifeq section "comingsoon"}}
            {{> nav_comingsoon}}
            <div class="col-sm-12">
        {{else}}
            {{#ifeq section "index"}}
                {{> nav}}
                <div class="container">
            {{else}}
                {{> group/header_htyi}}
            {{/ifeq}}
        {{/ifeq}}

        <div id="wrapper" class="container">

            <div id="overlay" class="modal">
            
            </div>

            {{#ifeq debug true}}
                <div id="error-box">
                </div>
                
                {{!-- DEBUGGING --}}
                <div id="debugging" style="position: fixed;top: 0;">
                    
                    <div id="debug-info">
                    </div>

                    {{#ifeq section 'group/monitor'}}
                        
                        <button id="template_reload">reload</button>
                        <select id="template_selector" name="template_selector_player">
                          <option value="">choose:</option>
                          <option value="partials/group/tweet" data-key="tweet" data-event_id="game:start">tweet</option>
                          <option value="partials/group/voting" data-key="submissions" data-event_id="hashtags:received">voting</option>
                          <option value="partials/group/results" data-key="results" data-event_id="hashtags:results">results</option>
                        </select>

                    {{else}}

                        <select id="template_selector" name="template_selector_player">
                          <option value="">choose:</option>
                          <option value="partials/player/tweet">tweet</option>
                          <option value="partials/player/voting" data-key="voting" data-event_id="hashtags:received">voting</option>
                          <option value="partials/player/results" data-key="results">results</option>
                          <option value="wait">wait</option>
                        </select>

                    {{/ifeq}}

                    <div id="slider-gsap">
                    </div>
                </div>
            {{/ifeq}}

                  <div class="container" id="gameContent">

                    <!-- BODY CONTENT START -->
                    {{{body}}}

                  </div>
            </div><!-- /.container -->

            <!-- page-wrapper end -->
            {{#ifeq env "development"}}
                {{> script/development section=section subSection=sub_section}}
            {{else}}
                {{> script/production section=section}}
            {{/ifeq}}

        </div>

    </body>
</html>
